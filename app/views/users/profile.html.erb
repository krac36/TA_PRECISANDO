<div class="container">
  <h1><%= current_user.username %>'s Profile <%= cl_image_tag current_user.photo.key, height: 70, width: 70, crop: :fill, class: "rounded-circle", alt: "picture" %> </h1>
  <p><strong>Full Name:</strong> <%= current_user.fullname %>     </p>
  <p><strong>Address:</strong> <%= current_user.address %></p>
  <p><strong>Email:</strong> <%= current_user.email %></p>
  <!-- Add more profile attributes as needed -->

  <h2>My products:</h2>
  <div class="row ms-3">
    <% current_user.products.each do |product| %>
      <div class="col-md-2">
        <div class="card mb-4 shadow-sm">
          <%= cl_image_tag product.photos.first.key, class: "card-img-top", alt: product.name %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
            <small class="text-muted"><%= number_to_currency(product.price) %></small>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to 'Show', product, class: 'btn btn-sm btn-outline-secondary' %>
                <% if current_user == product.user %>
                  <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-sm btn-outline-secondary' %>
                  <%= link_to 'Delete', product_path(product), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this product?'}, class: 'btn btn-sm btn-outline-secondary' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <br>

  <%= link_to 'New Product', new_product_path, class: 'btn btn-primary mb-3' %>




  <h2>Rentals:</h2>
  <ul>
    <% current_user.rentals.each do |rental| %>
      <li><%= rental.product.name %> - <%= rental.start_date %> to <%= rental.end_date %></li>
    <% end %>
  </ul>
</div>
