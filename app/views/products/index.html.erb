<h1>Products</h1>

<div class="row justify-content-center">
  <div class="col-sm-8 m-4">
    <%= form_with url: products_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query, params[:query], class: "search-form-control form-control", placeholder: "Type a keyword or category" %>
      <%= submit_tag "Search", name: "", class: "btn btn-danger" %>
    <% end  %>
  </div>
</div>


<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
         <%= cl_image_tag product.photos.first.key, class: "card-img-top", alt: product.name %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= product.description %></p>
          <p class="card-text">Rented by:<%= product.user.username %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to 'Show', product, class: 'btn btn-sm btn-outline-secondary' %>
              <% if current_user == product.user %>
                <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-sm btn-outline-secondary' %>
                <%= link_to 'Delete', product_path(product), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this product?'}, class: 'btn btn-sm btn-outline-secondary' %>
              <% end %>
            </div>
            <small class="text-muted"><%= number_to_currency(product.price) %></small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
